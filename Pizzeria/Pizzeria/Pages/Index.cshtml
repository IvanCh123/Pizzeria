@page
@model IndexModel
@{
    ViewData["Title"] = "Index";
}

<html>
<head>
    <meta charset="utf-8" />

    <script src="https://kit.fontawesome.com/8dbd1c7c50.js" crossorigin="anonymous"></script>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

    <style>
        body {
        margin-top:10vmax;
        }

        form {
            width: 100%;
            margin: auto;
            padding: 20px;
            border-radius: 6px;
            background-color: #4CAF50;
        }

            form h1 {
                align-content: center;
                color: white;
            }
    </style>

</head>

<body>
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="center col-lg-6">
                    <h1>Bienvenido a Navishi's Pizza</h1>
                    <button class="btn btn-outline-primary">Ordenar</button>

                    <div class="row">
                        @if (Model.Resultado != "")
                        {
                            <br />
                            <h4 style="color:white">@Model.Resultado</h4>
                        }
                    </div>
                </div>
                <div class="col-lg-6">
                    <img src="~/images/me6.png" />
                </div>
            </div>

        </div>
    </form>
</body>
</html>




